mixin  generateSubContent(content)
  - let miniContent = content.replace(/<\/?(b|i|a)>/g, '').replace(/<a.*>/g,'').slice(0,150) 
  - miniContent += miniContent.length < 150 ? '...' : ''
  p !{miniContent}

mixin storyCard(id, title, content, author, createdAt, imageUrl)
  div.card(id=id) 
    - className = imageUrl ? 'card-content' : '';
      div(class= className)
        div.title= title
        div.content
          +generateSubContent(content)
        a.author(href="")= author
        - const [,month,date,year] = new Date(createdAt).toString().split(' ');
        .date= `${month} ${date}, ${year}`
      if imageUrl
        .card-image
          img(src= imageUrl, alt="blogImage")

mixin stories(list,authorInfo)
  each story in list
    - const paragraph = story.content.find(data=> data.type ==='paragraph')
    - const content = paragraph ? paragraph.data.text : ''
    +storyCard(story.id, story.title, content, authorInfo.display_name, story.lastModified, story.cover_image)

